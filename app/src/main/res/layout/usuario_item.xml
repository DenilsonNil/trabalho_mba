<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_list"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_item_usuario_titulo_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/txt_item_usuario_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Denilson"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="@+id/txt_item_usuario_titulo_nome"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_usuario_titulo_nome" />

    <TextView
        android:id="@+id/txt_item_usuario_titulo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_item_usuario_titulo_nome"
        app:layout_constraintTop_toBottomOf="@id/txt_item_usuario_nome"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/txt_item_usuario_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="denilson.martins@kualit.com.br"
        android:textColor="@color/purple_700"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/txt_item_usuario_titulo_nome"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_usuario_titulo_email" />

</androidx.constraintlayout.widget.ConstraintLayout>